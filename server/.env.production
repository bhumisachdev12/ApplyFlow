# ApplyFlow Server - Production
# ==============================

# Core Settings
PORT=5000
NODE_ENV=production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/applyflow
JWT_SECRET=your-production-jwt-secret-256-bit-key-here

# Security
CORS_ORIGIN=https://your-domain.com
JWT_EXPIRES_IN=24h

# Feature Toggles
ENABLE_ANALYTICS=true
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false